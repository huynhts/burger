<h1>Burgers</h1>


<section class ="container">

  <div class="row">
    <div class="col-md-6" id="uneaten"></div>
      <h2>Burger Menu:</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}

              <button class="delete-burger" data-id="{{this.id}}">DEVOUR!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-md-6" id="eaten">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12"></div>
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="newBurg">Burger Type:</label>
          <input type="text" id="newBurg" name="name">
        </div>

        <button type="submit">Submit Burger</button>
      </form>
    </div>
  </div>
</section>
