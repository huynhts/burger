<div class="burgerTitle">
  <h1>Burgers</h1>
</div>

<section>

  <div class="row">
    <div class="col-md-6" id="uneaten">
      <h3>Burger Menu:</h3>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}

              <button class="devour-burger" data-id="{{this.id}}">DEVOUR!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>



    <div class="col-md-6" id="eaten">
      <h3>Burgers Devoured!</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <h3>Add a Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="newBurg">Burger Type:</label>
          <input type="text" id="newBurg" name="name">
        </div>

        <button type="submit">Submit Burger</button>
      </form>
    </div>
  </div>
</section>
